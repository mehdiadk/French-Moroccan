{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <h1>Utilisateurs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            
          
            <tr>
                <th>Verifié ?</th>
                <td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_user_index') }}">Retour à la liste des utilisateurs</a>

    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}">Modifier</a>

    {{ include('admin_user/_delete_form.html.twig') }}
{% endblock %}
