{% extends 'base.html.twig' %}

{% block title %}Les pays{% endblock %}

{% block body %}
    <h1>Liste des pays</h1>

    <table class="table">
        <thead>
            <tr>
                
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
               
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('app_admin_category_show', {'id': category.id}) }}">Voir</a>
                    <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_category_new') }}">Cr√©er un nouveau pays</a>
{% endblock %}
